{
	"_comment": "In Linux host systems, rebuild after adding --device=/dev/dri:/dev/dri to runArgs",
	"name": "Fx4F",
	"image": "docker.io/steinkfstoter/fx4f:latest",
	"runArgs": [
		"--net=host",
		"--env=DISPLAY",
		"--env=QT_X11_NO_MITSHM=1",
		"--env=PYVISTA_OFF_SCREEN=false",
		"--volume=/tmp/.X11-unix:/tmp/.X11-unix:rw"
	],
	"workspaceMount": "source=${localWorkspaceFolder},target=/app,type=bind",
	"workspaceFolder": "/app",
	"remoteUser": "ubuntu",

	"customizations": {
		"vscode": {
			"extensions":[
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-python.debugpy",
				"visualstudioexptteam.vscodeintellicode",
				"peakchen90.open-html-in-browser",
				"njpwerner.autodocstring",
				"mhutchie.git-graph"
			],
			"settings": {
				"python.defaultInterpreterPath": "/dolfinx-env/bin/python"
			}
		}
	}
}
